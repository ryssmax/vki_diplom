@model PM.Web.Administration.User.CreateUserViewModel

@using (Ajax.BeginForm("Create", "User", new { area = "Administration" },
                new AjaxOptions()
                {
                    HttpMethod = "POST",
                    OnSuccess = "Ajax.onSuccess(data, 'users-list', true);",
                    OnFailure = "Ajax.onError",
                    LoadingElementId = "loader"
                }, null))
{
    @Html.AntiForgeryToken()

    <div class="modal fade" id="new-user-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">

                <!-- MODAL HEADER -->
                <div class="modal-header modal-header-success">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Create New User</h4>
                </div>

                <!-- MODAL BODY -->
                <div class="modal-body">
                    <div class="create-task">

                        <div class="form-group">
                            @Html.LabelFor(p => p.UserName, "Username")
                            @Html.TextBoxFor(p => p.UserName, new { @class = "form-control", placeholder = "Enter username" })
                            @Html.ValidationMessageFor(p => p.UserName)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(p => p.Email, "Email")
                            @Html.TextBoxFor(p => p.Email, new { @class = "form-control", placeholder = "Enter user email" })
                            @Html.ValidationMessageFor(p => p.Email)
                        </div>

                    </div>
                </div>

                <!-- MODAL FOOTER -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Create User</button>
                </div>

            </div>
        </div>
    </div>
}
